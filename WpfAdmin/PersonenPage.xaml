<Page x:Class="WpfAdmin.PersonenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonenPage">

    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Lijst van personen -->
        <ListBox x:Name="PersonListBox"  Background="LightBlue" BorderThickness="5" BorderBrush="Black" FontFamily="sans-serif" Grid.Row="0" Grid.Column="0" Margin="10,15,10,15" SelectionChanged="PersonListBox_SelectionChanged"/>

        <!-- Details van geselecteerde persoon -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20">
            <TextBlock Text="Login" FontWeight="Bold"/>
            <TextBlock x:Name="LoginTextBlock" Margin="0,0,0,10"/>
            <TextBlock Text="Reg. datum" FontWeight="Bold"/>
            <TextBlock x:Name="RegDateTextBlock" Margin="0,0,0,10"/>
            <TextBlock Text="Is admin?" FontWeight="Bold"/>
            <TextBlock x:Name="IsAdminTextBlock" Margin="0,0,0,10"/>
            <Image x:Name="ProfileImage" Width="200" Height="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="EditButton" Background="#87CEFA" BorderThickness="2" BorderBrush="Black" Content="Bewerk" Width="75" Margin="5" Click="EditButton_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5" BlurRadius="5" Opacity="2" Color="Black" Direction="310"/>
                    </Button.Effect>
                </Button>
                <Button x:Name="DeleteButton" Background="#87CEFA" BorderThickness="2" BorderBrush="Black" Content="Verwijder" Width="75" Margin="5" Click="DeleteButton_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5" BlurRadius="5" Opacity="2" Color="Black" Direction="310"/>
                    </Button.Effect>
                </Button>
                <Button x:Name="NewButton" Background="#87CEFA" BorderThickness="2" BorderBrush="Black" Content="Nieuw" Width="75" Margin="5" Click="NewButton_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5" BlurRadius="5" Opacity="2" Color="Black" Direction="310"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
            <TextBlock x:Name="MessageTextBlock" Foreground="Red" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
