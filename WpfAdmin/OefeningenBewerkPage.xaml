<Page x:Class="WpfAdmin.OefeningenBewerkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="OefeningenBewerkPage">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Oefening Bewerken" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Afbeelding en wijzig-knop -->
                <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="10">
                    <Image x:Name="ExerciseImage" Width="200" Height="200" Margin="10"/>
                    <Button Content="Wijzig Afbeelding" Click="ChangeImageButton_Click" Width="210" 
                            Background="#87CEFA" Foreground="Black" BorderBrush="Black" BorderThickness="2"/>
                </StackPanel>

                <!-- Gegevens van de oefening -->
                <Grid Grid.Row="0" Grid.Column="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Naam:" FontWeight="Bold" FontSize="14" Margin="10" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameTextBox" Margin="10" Padding="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Punten:" FontWeight="Bold" FontSize="14" Margin="10" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="PointsTextBox" Margin="10" Padding="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Beschrijving:" FontWeight="Bold" FontSize="14" Margin="10" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="DescriptionTextBox" Margin="10" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Height="108"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Instructie:" FontWeight="Bold" FontSize="14" Margin="10" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="InstructionTextBox" Margin="10" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Height="108"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Lichaamsdeel:" FontWeight="Bold" FontSize="14" Margin="10" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="BodypartTextBox" Margin="10" Padding="5"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Houding:" FontWeight="Bold" FontSize="14" Margin="10" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="PoseTextBox" Margin="10" Padding="5"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Bijnaam:" FontWeight="Bold" FontSize="14" Margin="10" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="6" Grid.Column="1" x:Name="NicknameTextBox" Margin="10" Padding="5"/>
                </Grid>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="Opslaan" Click="SaveButton_Click" Margin="10" Width="150"
                    Background="#87CEFA" Foreground="Black" BorderBrush="Black" BorderThickness="2"/>
            <Button Content="Annuleren" Click="CancelButton_Click" Margin="10" Width="150"
                    Background="#87CEFA" Foreground="Black" BorderBrush="Black" BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
