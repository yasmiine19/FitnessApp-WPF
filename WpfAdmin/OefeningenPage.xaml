      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OefeningenPage">

    <Grid>
    <TabControl>
        <TabItem Header="Cardio">
            <ScrollViewer>
                <WrapPanel x:Name="CardioPanel" Margin="10"/>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Dumbell">
            <ScrollViewer>
                <WrapPanel x:Name="DumbellPanel" Margin="10"/>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Yoga">
            <ScrollViewer>
                <WrapPanel x:Name="YogaPanel" Margin="10"/>
            </ScrollViewer>
        </TabItem>
    </TabControl>
