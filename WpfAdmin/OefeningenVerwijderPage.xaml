<Page x:Class="WpfAdmin.OefeningenVerwijderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OefeningenVerwijderPage">

    <Grid Background="White">
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Titel van de pagina -->
            <TextBlock Text="Overzicht Oefening" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

            <!-- Gegevens van de oefening -->
            <TextBlock x:Name="NameTextBlock" FontSize="16" Margin="10" HorizontalAlignment="Center" Width="130"/>
            <Image x:Name="ExerciseImage" Width="100" Height="100" Margin="10"/>
            <TextBlock x:Name="PointsTextBlock" FontSize="14" Margin="10" HorizontalAlignment="Center"/>
            <TextBlock x:Name="DescriptionTextBlock" FontSize="14" Margin="10" TextWrapping="Wrap" Width="300" HorizontalAlignment="Center"/>

            <!-- Bevestigingstekst -->
            <TextBlock Text="Weet u zeker dat u deze oefening wilt verwijderen?" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" Foreground="Red"/>

            <!-- Knoppen voor verwijderen en annuleren -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Verwijderen" Click="DeleteButton_Click" Width="100" Margin="10" 
                        Background="#87CEFA" Foreground="Black" BorderBrush="Black" BorderThickness="2">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                    </Button.Effect>
                </Button>
                <Button Content="Annuleren" Click="CancelButton_Click" Width="100" Margin="10" 
                        Background="#87CEFA" Foreground="Black" BorderBrush="Black" BorderThickness="2">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
