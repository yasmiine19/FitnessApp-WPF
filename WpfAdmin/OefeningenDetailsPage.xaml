<Page x:Class="WpfAdmin.OefeningenDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OefeningenDetailsPage">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Titel van de pagina -->
        <TextBlock Grid.Row="0" Text="Oefening Details" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145*" />
                    <ColumnDefinition Width="96*" />
                </Grid.ColumnDefinitions>

                <!-- Gegevens van de oefening -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Left" Margin="10,10,0,10" Width="310">
                    <TextBlock Text="Naam:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="NameTextBlock" FontSize="16" Margin="5" />

                    <TextBlock Text="Type:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="TypeTextBlock" FontSize="16" Margin="5" />

                    <TextBlock Text="Instructie:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="InstructionTextBlock" TextWrapping="Wrap" FontSize="16" Width="300" Margin="5" />

                    <TextBlock Text="Lichaamsdeel:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="BodypartTextBlock" FontSize="16" Margin="5" />

                    <TextBlock Text="Houding:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="PoseTextBlock" FontSize="16" Margin="5" />

                    <TextBlock Text="Bijnaam:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="NicknameTextBlock" FontSize="16" Margin="5" />

                    <TextBlock Text="Punten:" FontWeight="Bold" FontSize="14" Margin="10,20,10,0"/>
                    <TextBlock x:Name="PointsTextBlock" FontSize="16" Margin="5" />

                    <TextBlock Text="Beschrijving:" FontWeight="Bold" FontSize="14" Margin="10,20,10,0"/>
                    <TextBlock x:Name="DescriptionTextBlock" TextWrapping="Wrap" FontSize="16" Width="300" Margin="5" />
                </StackPanel>

                <!-- Afbeelding van de oefening -->
                <Image Grid.Column="1" x:Name="ExerciseImage" Height="125" Margin="125,20,20,0" VerticalAlignment="Top" />
            </Grid>
        </ScrollViewer>

        <!-- Terug-knop -->
        <Button Grid.Row="2" Content="Terug" Click="BackButton_Click" Margin="10" Width="150" HorizontalAlignment="Center" Background="#007ACC" Foreground="White">
            <Button.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
            </Button.Effect>
        </Button>
    </Grid>
</Page>
