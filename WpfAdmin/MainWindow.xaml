<Window x:Class="WpfAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Admin - Welkom" Height="700" Width="1100" MinHeight="600" MinWidth="910">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Linkerzijbalk met knoppen -->
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="20,30,20,0">
            <Button x:Name="BtnPersonen" BorderThickness="2" BorderBrush="Black" Content="🧍 Personen" Height="40" Margin="0,0,0,10" Background="#87CEFA" Foreground="Black" Click="PersonsButton_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                </Button.Effect>
            </Button>
            <Button x:Name="BtnOefeningen" BorderThickness="2"  BorderBrush="Black"  Content="💪 Oefeningen" Height="40" Margin="0,0,0,10" Background="#87CEFA" Foreground="Black" Click="BtnOefeningen_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                </Button.Effect>
            </Button>
            <Button x:Name="BtnUitloggen" BorderThickness="2"  BorderBrush="Black"  Content="🚪 Uitloggen" Height="40" Background="#87CEFA" Foreground="Black" Click="BtnUitloggen_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                </Button.Effect>
            </Button>
            <Image x:Name="ImgFoto" Margin="0,150,0,0" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="100" MinWidth="75"/>
        </StackPanel>

        <!-- Hoofdinhoud frame -->
        <Frame x:Name="MainFrame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="20,20,20,20" Background="LightBlue" BorderThickness="1" BorderBrush="#1E90FF"/>
    </Grid>
</Window>
