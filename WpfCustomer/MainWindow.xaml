<Window x:Class="WpfCustomer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Customer - Welkom" Height="700" Width="1100" MinHeight="600" MinWidth="920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Linker Zijbalk -->
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="20,30,20,0" Height="640" Width="150">
            <Button x:Name="BtnStatistieken" BorderThickness="2" BorderBrush="Black" Content="📊 Statistieken" Height="40" Margin="0,0,0,10" Background="#87CEFA" Foreground="Black" Click="StatistiekenButton_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                </Button.Effect>
            </Button>
            <Button x:Name="BtnWorkouts" BorderThickness="2" BorderBrush="Black" Content="🏋️ Workouts" Height="40" Margin="0,0,0,10" Background="#87CEFA" Foreground="Black" Click="WorkoutsButton_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                </Button.Effect>
            </Button>
            <Button x:Name="BtnUitloggen" BorderThickness="2" BorderBrush="Black" Content="🚪 Uitloggen" Height="40" Background="#87CEFA" Foreground="Black" Click="BtnUitloggen_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                </Button.Effect>
            </Button>
            <Image x:Name="ImgFoto" Width="130" Height="130" Margin="10,200,0,0"/>
        </StackPanel>

        <!-- Hoofd Inhoud Frame -->
        <Frame x:Name="MainFrame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="20,30,20,40" Background="LightBlue" BorderThickness="1" BorderBrush="#1E90FF"/>
    </Grid>
</Window>
