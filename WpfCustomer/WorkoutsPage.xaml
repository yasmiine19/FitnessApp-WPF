<Page x:Class="WpfCustomer.WorkoutsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Workouts Overzicht">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linkerkant van de page -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="10">
            <TextBlock Text="Kies een datum om je workouts van die dag te zien:" FontWeight="Bold" Margin="5"/>
            <Calendar x:Name="WorkoutCalendar" SelectedDatesChanged="WorkoutCalendar_SelectedDatesChanged" Margin="5"/>
            <Button x:Name="AddWorkoutButton" Content="Voeg workout toe..." Margin="5" Background="#1E90FF" Foreground="White" BorderBrush="DarkBlue" BorderThickness="2" Click="AddWorkoutButton_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="5" Opacity="2" Color="Black" Direction="320"/>
                </Button.Effect>
            </Button>
            <TextBlock x:Name="MessageTextBlock" Margin="10" Foreground="Red"/>
            <TextBlock x:Name="WorkoutsCountTextBlock" Margin="10" FontWeight="Bold"/>
        </StackPanel>

        <!-- Rechterkant van de page -->
        <ScrollViewer Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="10,10,5,10" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="WorkoutsPanel" Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>
</Page>
