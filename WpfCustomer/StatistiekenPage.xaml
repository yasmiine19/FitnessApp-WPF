<Page x:Class="WpfCustomer.StatistiekenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
      xmlns:local="clr-namespace:WpfCustomer"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Statistieken Overzicht">

    <Grid Background="White" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titel van de pagina -->
        <TextBlock Text="Statistieken Overzicht" FontWeight="Bold" FontSize="20" Foreground="#1E90FF" HorizontalAlignment="Center" Margin="10" Grid.Row="0" Grid.ColumnSpan="2"/>

        <!-- Selectie periode en toon statistieken knop -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Text="Selecteer een periode: van " VerticalAlignment="Center"/>
            <DatePicker x:Name="StartDatePicker" Margin="5"/>
            <TextBlock Text=" tot " VerticalAlignment="Center"/>
            <DatePicker x:Name="EndDatePicker" Margin="5"/>
            <Button Content="📅" Click="ToonStatistiekenButton_Click" Margin="5" Background="#1E90FF" Foreground="White" BorderBrush="DarkBlue" BorderThickness="2"/>
        </StackPanel>

        <!-- Grafiek -->
        <ScottPlot:WpfPlot x:Name="WpfPlot1" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" Margin="10"/>

        <!-- Statistieken -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock x:Name="CongratulationTextBlock" Text="Gefeliciteerd! Je behaalde al " FontWeight="Bold" FontSize="16" Margin="10" TextWrapping="Wrap"/>
            <TextBlock x:Name="TotalPointsTextBlock" FontWeight="Bold" FontSize="16" Margin="10" TextWrapping="Wrap"/>
            <TextBlock x:Name="AveragePointsTextBlock" FontWeight="Bold" FontSize="14" Margin="10" TextWrapping="Wrap"/>
            <TextBlock x:Name="LongestStreakTextBlock" FontWeight="Bold" FontSize="14" Margin="10" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Foutmelding -->
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" FontWeight="Bold" FontSize="10" Margin="10" Grid.Row="3" Grid.Column="1" Visibility="Collapsed" HorizontalAlignment="Center" Width="180"/>
    </Grid>
</Page>
