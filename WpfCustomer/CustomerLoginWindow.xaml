<Window x:Class="WpfCustomer.CustomerLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customer Login" Height="450" Width="800" MinHeight="400" MinWidth="600">
    
    <Grid Background="#F0F8FF">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Customer Login" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" Foreground="#1E90FF"/>
            <TextBlock Text="Customer" Margin="10,0,10,5"/>
            <TextBox Name="UsernameTextBox" Width="200" Margin="10" Background="#87CEFA" Foreground="Black" BorderBrush="#1E90FF" BorderThickness="2"/>
            <TextBlock Text="Wachtwoord" Margin="10,0,10,5"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="10" Background="#87CEFA" Foreground="Black" BorderBrush="#1E90FF" BorderThickness="2"/>
            <Button Name="LoginButton" Content="Login" Width="200" Margin="10" Background="#1E90FF" Foreground="White" BorderBrush="#104E8B" BorderThickness="2" Click="LoginButton_Click"/>
            <TextBlock Name="ErrorMessageTextBlock" Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
